	<RadioBox Name="ItemList" Style="LightFrame" Anchor="$CenterX,$CenterY" Bounds="-60,-63,180,105" InnerMargin="4,5,4,0" Items="Bind AvailableItems" Scrolling="True" OnSelect="UpdateDescription" SelectSound="None">
