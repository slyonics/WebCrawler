			<Label Text="x" Font="Main" Alignment="Cascading" TextAlignment="Right" Bounds="0,0,8,16" Visible="Ref DataGrid.Consumable"/>
			<Label Text="Bind DataGrid.Quantity" Font="Main" Alignment="Cascading" TextAlignment="Left" Bounds="0,0,16,16" Visible="Ref DataGrid.Consumable"/>
