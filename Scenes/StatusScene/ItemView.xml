	<Panel Style="LightFrame" Anchor="$CenterX,$CenterY" Bounds="-60,42,180,41" InnerMargin="6,5,6,0">
		<CrawlText Name="Description" Text="Bind Description" Alignment="Stretch" Font="Main" Color="#4D2B32FF"/>
	</Panel>
	
